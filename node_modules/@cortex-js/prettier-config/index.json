{
  "$schema": "http://json.schemastore.org/prettierrc",
  "arrowParens": "always",
  "bracketSpacing": true,
  "endOfLine": "lf",
  "jsxSingleQuote": false,
  "bracketSameLine": false,
  "proseWrap": "always",
  "quoteProps": "consistent",
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "es5",
  "useTabs": false,
  "overrides": [
    {
      "files": ".prettierrc",
      "options": { "parser": "json" }
    },
    {
      "files": "*.md",
      "options": {
        "singleQuote": false,
        "quoteProps": "preserve",
        "embeddedLanguageFormatting": "off"
      }
    },
    {
      "files": "*.html",
      "options": {
        "singleQuote": false,
        "quoteProps": "preserve"
      }
    }
  ]
}
